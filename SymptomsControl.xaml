<UserControl x:Class="SimptomChek.SymptomsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите ваши симптомы через запятую:" FontWeight="Bold" FontSize="25"/>
            <TextBox x:Name="SymptomsTextBox" Height="50" TextWrapping="Wrap" Background="#FFC8DD" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>